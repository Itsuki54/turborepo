{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "ignore": [
      "**/dist",
      ".next",
      "node_modules",
      "**/.next",
      "**/.vercel",
      "**/node_modules",
      "**/next.config.ts",
      "**/next.config.js",
      "**/tailwind.config.js",
      "**/tailwind.config.ts",
      "**/*.js"
    ]
  },
  "organizeImports": {
    "ignore": [
      "**/dist",
      ".next",
      "node_modules",
      "**/.next",
      "**/.vercel",
      "**/node_modules",
      "**/next.config.ts",
      "**/next.config.js",
      "**/tailwind.config.js",
      "**/tailwind.config.ts",
      "**/*.js"
    ],
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": false,
      "correctness": {
        "noUnusedVariables": "error",
        "useHookAtTopLevel": "error",
        "useJsxKeyInIterable": "error",
        "noUnusedImports": "error"
      },
      "nursery": {
        "noExportedImports": "error",
        "useSortedClasses": "error"
      },
      "style": {
        "noDefaultExport": "error",
        "noNegationElse": "error",
        "useBlockStatements": "off"
      }
    },
    "ignore": [
      "**/dist",
      ".next",
      "node_modules",
      "**/.next",
      "**/.vercel",
      "**/node_modules",
      "**/next.config.ts",
      "**/next.config.js",
      "**/tailwind.config.js",
      "**/tailwind.config.ts",
      "**/*.js"
    ]
  },
  "javascript": { "formatter": { "quoteStyle": "single" } },
  "overrides": [
    {
      "include": ["*.ts", "*.tsx"],
      "linter": { "rules": { "suspicious": { "noConsole": "error" } } }
    },
    {
      "include": ["src/pages/**/*", "src/app/**/*"],
      "linter": {
        "rules": {
          "style": {
            "noDefaultExport": "off"
          }
        }
      }
    }
  ]
}
